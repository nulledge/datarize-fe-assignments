{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

    /* Path alias */
    "baseUrl": "src/",
    "paths": {
      "@components/*": ["components/*"],
      "@interfaces/*": ["interfaces/*"],
      "@/*": ["*"],
    }
  },
  "include": ["vite.config.ts"]
}
